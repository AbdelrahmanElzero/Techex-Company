extends index.pug

block title 
  title login


block landing
  +landing('home', 'login')

block content
  div(class='login section')
    div(class='container')
      div(class='row')
        div(class='col-lg-6 col-12')
          div(class='image')
            img(src='https://templates.hibootstrap.com/techex/default/assets/images/user-img.jpg', alt='')
        div(class='col-lg-6 col-12')
          form(class='row g-3 contact-form needs-validation' novalidate)
            div(class='col-lg-12')
              h2(class='') log in
            div(class='col-lg-12')
              input(type="email" class="form-control" id="validationCustom01" placeholder='username or email' required)
              div(class='invalid-feedback text-danger') this field is required
            div(class='col-lg-12')
              input(type="text" class="form-control" id="validationCustom01" placeholder='enter your password' required)
              div(class='invalid-feedback text-danger') please enter your password
            div(class='col-lg-12')
              div(class='d-flex justify-content-between align-items-center')
                div(class='left')
                  input(type="checkbox" class="form-check-input" id="remember")
                  label(for='remember') remember me
                  div(class='invalid-feedback text-danger') please enter your password
                div(class='right')
                  a(href='password.html') forgot password?
            div(class='col-lg-12')
              button(class='btn' type='submit') log in now
            div(class='col-lg-12 fw-bold')
              div not a member?
                a(href='register.html' class='ml-10') register now 
block scripts
    include includes/scripts.pug
    script(src="js/global.js")
    script(src="js/forms.js")